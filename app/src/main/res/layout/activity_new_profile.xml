<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTaskActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusableInTouchMode="true" >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toobar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="525dp"
        android:layout_margin="25dp"
        android:background="@drawable/pop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/profileimage"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/round"
                android:backgroundTint="@color/white"
                />
            <EditText
                android:lines="1"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/msgbox"
                android:id="@+id/nametext"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:hint="Profile name"/>

            <LinearLayout
                android:id="@+id/colorlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:layout_marginHorizontal="15dp">
                    <ImageButton
                        android:id="@+id/Color1"
                        android:tag="#FA8072"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color1"
                        android:onClick="Changecolor"/>
                    <ImageButton
                        android:id="@+id/Color2"
                        android:tag="#58DCA1"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color2"
                        android:onClick="Changecolor"/>
                    <ImageButton
                        android:id="@+id/Color3"
                        android:tag="#FFEA67"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color3"
                        android:onClick="Changecolor"
                        />
                    <ImageButton
                        android:id="@+id/Color4"
                        android:tag="#E39FF8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color4"
                        android:onClick="Changecolor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp">
                    <ImageButton
                        android:id="@+id/Color5"
                        android:tag="#FC88AB"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color5"
                        android:onClick="Changecolor"/>
                    <ImageButton
                        android:id="@+id/Color6"
                        android:tag="#C3C0F1"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color6"
                        android:onClick="Changecolor"/>
                    <ImageButton
                        android:id="@+id/Color7"
                        android:tag="#FF5D5D"
                        android:layout_marginHorizontal="15dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color7"
                        android:onClick="Changecolor"/>

                    <ImageButton
                        android:id="@+id/Color8"
                        android:tag="#2196F3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@drawable/round"
                        android:backgroundTint="@color/Color8"
                        android:onClick="Changecolor"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Save"
        android:onClick="saveProfile"
        android:textColor="@color/white"
        android:background="@drawable/bs"/>

    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="Cancel"
        android:onClick="cancel"
        android:layout_marginTop="3dp"
        android:textColor="@color/white"
        android:background="@drawable/cc"/>
</LinearLayout>